{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "target": "ES2018",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": [
        "src/**/*ts",
        "src/modules",
        "src/DataBase/.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}